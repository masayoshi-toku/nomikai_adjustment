%p
  %strong= @event.title
%table{ border: 1 }
  %thead
    %tr
      %th 日程
      %th ◯
      %th △
      %th ×
      - answerers(@event).each do |name|
        %th= name
  %tbody
    - reactions(@event).each do |reaction|
      %tr
        %th= reaction[:event_date]
        - reaction[:counts].each do |count|
          %td= count
        - reaction[:marks].each do |mark|
          %td= mark

= link_to '出席を入力する', new_event_reaction_path(@event.url_path)
%input{ type: 'text', size: 25, onfocus: 'this.select();', value: event_url(@event.url_path) }
= link_to 'Edit', edit_event_path(@event.url_path)
|
= link_to 'Back', events_path
